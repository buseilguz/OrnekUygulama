@model IEnumerable<OrnekUygulama.Models.Sayfalar>

@{
    ViewData["Title"] = "Sayfalar";
    Layout = "~/Views/Shared/_yonetimtema.cshtml";
}

<h1>Sayfalar</h1>

<p>
    <a asp-action="SayfaEkle">Yeni Sayfa Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SayfaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Baslik)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Aktif)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SayfaId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Baslik)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Aktif)
                </td>

                <td>
                    <a asp-action="SayfaGetir" asp-route-id="@item.SayfaId">Düzenle</a> |

                    <a asp-action="SayfaSil" asp-route-id="@item.SayfaId" onclick="return confirm('Sayfa Silinsin mi?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
