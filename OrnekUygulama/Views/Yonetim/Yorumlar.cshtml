@model IEnumerable<OrnekUygulama.Models.Yorumlar>

@{
    ViewData["Title"] = "Yorumlar";
    Layout = "~/Views/Shared/_yonetimtema.cshtml";
}

<h1>Yorumlar</h1>
@using (Html.BeginForm()) { 
<div class="row">
  

    <div class="col-6">

        <select id="listelemeturu" name="listelemeturu" class="form-control">
            <option value="Tumu">Tümü</option>
            <option value="Onayli">Onaylı</option>
            <option value="Onaysiz">Onaysız</option>
        </select>

    </div>
    <div class="col-6">
        <input type="submit" value="Listele" class="btn btn-primary" />

    </div>

</div>
   


}


<table class="table">
    <thead>
        <tr>
            <th>
               ID
            </th>
            <th>
                Yorum
            </th>
            <th>
                Ekleme Tarihi
            </th>
            <th>
                Onay Durumu
            </th>

            <th>
                Tarif
            </th>
            <th>
                Üye
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.YorumId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yorum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eklemetarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aktif)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Tarif.Yemekadi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uye.Adi)&nbsp;  @Html.DisplayFor(modelItem => item.Uye.Soyadi)
            </td>
            <td>

                <a asp-action="Onayla" asp-route-id="@item.YorumId" onclick="return confirm('Onay durumu değiştirilsin mi?')">Onayla/Gizle</a> |
                <a asp-action="YorumSil" asp-route-id="@item.YorumId" onclick="return confirm('Yorum silinsin mi?')">Yorumu Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
